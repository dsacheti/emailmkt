{% extends '@layout/default.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <a href="{{ url('city.create') }}" class="btn btn-app">
                    <i class="fa fa-plus-circle"></i>Novo
                </a>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width:10px;">ID</th>
                            <th>Nome</th>
                            <th>UF</th>
                            <th>CEP</th>
                            <th>Ações</th>
                        </tr>
                        {% for city in cities %}
                            <tr>
                                <td>{{ city.id }}</td>
                                <td>{{ city.name }}</td>
                                <td>{{ city.uf }}</td>
                                <td>{{ city.cep }}</td>
                                <td>
                                    <a href="{{ url('city.update',{id:city.id}) }}">Editar</a> |
                                    <a href="{{ url('city.delete',{id:city.id}) }}">Apagar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>
    <div>

    </div>
{% endblock %}
{% block title %}
    Listagem de Cidades
{% endblock %}
{% block page_header %}
    Listagem de Cidades
{% endblock %}