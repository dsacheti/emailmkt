{% extends '@layout/default.html.twig' %}
{% block content %}
    {% set name = form.get('name') %}
    {% do name.setAttribute('class','form-control') %}

    {% set uf = form.get('uf') %}
    {% do uf.setAttribute('class','form-control') %}

    {% set cep = form.get('cep') %}
    {% do cep.setAttribute('class','form-control') %}

    {% set submit = form.get('submit') %}
    {% do
    submit.setAttribute('class','btn btn-primary')
    .setLabel('Incluir')
    %}
    {% do form.setAttribute('action',url('city.create')) %}
    {% do form.prepare() %}

    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="box box-primary">
                <div class="box-body">
                    {{ form().openTag(form) |raw }}
                        <div class="box-body">
                            <div class="form-group">
                                {{ formRow(name) }}
                            </div>
                            <div class="form-group">
                                {{ formRow(uf) }}
                            </div>
                            <div class="form-group">
                                {{ formRow(cep) }}
                            </div>
                        </div>
                        <div class="box-footer">
                            {{ formButton(submit) }}
                        </div>
                        {{ form().closeTag() |raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Nova Cidade
{% endblock %}
{% block page_header %}
    Nova Cidade
{% endblock %}