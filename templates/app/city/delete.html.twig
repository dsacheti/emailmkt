{% extends '@layout/default.html.twig' %}
{% block content %}
    {% set name = form.get('name') %}
    {% do name.setAttribute('class','form-control').setAttribute('disabled','disabled') %}

    {% set uf = form.get('uf') %}
    {% do uf.setAttribute('class','form-control').setAttribute('disabled','disabled') %}

    {% set cep = form.get('cep') %}
    {% do cep.setAttribute('class','form-control').setAttribute('disabled','disabled') %}

    {% set submit = form.get('submit') %}
    {% do
    submit.setAttribute('class','btn btn-danger')
    .setLabel('Apagar')
    %}
    {% do form.setAttribute('action',url('city.delete',{id: form.getObject.id})) %}
    {% do form.prepare() %}
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="box box-danger">
                <div class="box-body">
                    {{ form().openTag(form) |raw }}
                            <div class="box-body">
                                <div class="form-group">
                                    {{ formRow(name) }}
                                </div>
                                <div class="form-group">
                                    {{ formRow(uf) }}
                                </div>
                                <div class="form-group">
                                    {{ formRow(cep) }}
                                </div>
                            </div>
                        <div class="box-footer">
                            {{ formButton(submit) }}
                            <a href="{{ url('city.list') }}" class="btn btn-default">Cancelar</a>
                        </div>
                    {{ form().closeTag |raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Apagar Cidade
{% endblock %}
{% block page_header %}
    Apagar Cidade: - {{ form.getObject.name }}
{% endblock %}