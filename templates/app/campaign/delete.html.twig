{% extends '@layout/default.html.twig' %}
{% block content %}
    {% set name = form.get('name') %}
    {% do name.setAttribute('class','form-control').setAttribute('disabled','disabled') %}
    {% set tags = form.get('tags') %}
    {% do tags.setAttribute('class','form-control').setAttribute('disabled','disabled') %}

    {% set template = form.get('template') %}
    {% do template.setAttribute('class','form-control').setAttribute('disabled','disabled') %}

    {% set submit = form.get('submit') %}
    {% do
    submit.setAttribute('class','btn btn-danger')
    .setLabel('Apagar')
    %}
    {% do form.setAttribute('action',url('campaign.delete',{id:form.getObject.id})) %}
    {% do form.prepare() %}
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="box box-danger">
                <div class="box-body">
                    {{ form().openTag(form) | raw }}
                    <div class="box-body">
                        <div class="form-group">
                            {{ formRow(name) }}
                        </div>
                        <div class="form-group">
                            {{ formRow(tags) }}
                        </div>
                        <div class="form-group">
                            {{ formRow(template) }}
                        </div>
                    </div>
                    <div class="box-footer">
                        {{ formButton(submit) }}
                        <a class="btn btn-default" href="{{ url('campaign.list') }}">Cancelar</a>
                    </div>
                    {{ form().closeTag() |raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Apagar Campanha
{% endblock %}
{% block page_header %}
    Apagar Campanha - {{form.getObject.name }}
{% endblock %}