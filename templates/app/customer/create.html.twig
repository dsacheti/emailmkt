{% extends '@layout/default.html.twig' %}
{% block content %}
{% include '@app/customer/_elementos_formulario.html.twig' %}

    {% set submit = form.get('submit') %}
    {% do
        submit.setAttribute('class','btn btn-primary')
                .setLabel('Incluir')
    %}
    {% do form.setAttribute('action',url('customer.create')) %}
    {% do form.prepare() %}
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="box box-primary">
                <div class="box-body">
                    {{ form().openTag(form) |raw }}

                    {% include '@app/customer/_campos_comuns.html.twig' %}

                        <div class="box-footer">
                            {{ formButton(submit) }}
                        </div>

                    {{ form().closeTag() |raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Novo Contato
{% endblock %}
{% block page_header %}
    Novo Contato
{% endblock %}