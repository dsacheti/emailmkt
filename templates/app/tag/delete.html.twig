{% extends '@layout/default.html.twig' %}
{% block content %}
    {% set nome = form.get('nome') %}
    {% do nome.setAttribute('class','form-control').setAttribute('disabled','disabled') %}

    {% set submit = form.get('submit') %}
    {% do
    submit.setAttribute('class','btn btn-danger')
    .setLabel('Apagar')
    %}
    {% do form.setAttribute('action',url('tag.delete',{id:form.getObject.id})) %}
    {% do form.prepare() %}
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="box box-danger">
                <div class="box-body">
                    {{ form().openTag(form) |raw }}
                    <div class="box-body">
                        <div class="form-group">
                            {{ formRow(nome) }}
                        </div>
                    </div>
                    <div class="box-footer">
                        {{ formButton(submit) }}
                        <a class="btn btn-default" href="{{ url('tag.list') }}">Cancelar</a>
                    </div>
                    {{ form().closeTag() |raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    Apagar Tag
{% endblock %}
{% block page_header %}
    Apagar Tag - {{form.getObject.nome }}
{% endblock %}